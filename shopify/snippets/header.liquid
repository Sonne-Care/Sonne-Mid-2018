<div id="header">
  <div class="fs-row">
    <div class="fs-cell fs-all-half">
      <a id="header-logo" href="/">{{ shop.name }}</a>
    </div>
    <div class="fs-cell fs-all-half text-right">
      {% include 'nav' %}
      <a href="/cart">
        <span class="icon icon-cart" aria-hidden="true">Cart</span>
        (<span id="CartCount">{{ cart.item_count }}</span>)
        {% comment %}
        <span id="CartCost">{{ cart.total_price | money }}</span>
        {% endcomment %}
      </a>
    </div>
  </div>
</div>
