<div id="header">
  <div class="fs-row">
    <div class="fs-cell fs-all-half">
      <a id="header-logo" class="button button-clear button-nav button-first" href="/">{{ shop.name }}</a>
    </div>
    <div class="fs-cell fs-all-half text-right">
      {% for link in linklists.main-menu.links %}
      <a class="button button-clear button-nav fs-md-hide fs-sm-hide" href="{{ link.url }}">{{ link.title }}</a>
      {% endfor %}
      <a id="header-cart" class="button button-nav button-clear button-last" href="/cart">
        Cart (<span id="header-cart-count" class="button-cart__count cart-count">{{ cart.item_count }}</span>)
      </a>
    </div>
  </div>
</div>
