{% capture template %}{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}{% endcapture %}

<!doctype html>
<!--[if lt IE 7]><html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]><html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]><html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if IE 9 ]><html class="ie9 no-js"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  {% if template == 'index' %}
  <title>{{ shop.name }} | {{ page_title }}</title>
  {% elsif template == '404' %}
  <title>Page Not Found | {{ shop.name }}</title>
  {% else %}
  <title>{{ page_title }} | {{ shop.name }}</title>
  {% endif %}
  {% if page_description %}
  <meta name="description" content="{{ page_description }}" />
  {% endif %}
  <link rel="canonical" href="{{ canonical_url }}" />
  <meta name="viewport" content="width=device-width" />
  {{ content_for_header }}
  {{ 'main.min.css' | asset_url | stylesheet_tag }}
  <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed" rel="stylesheet">
  {{ '//ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js' | script_tag }}
</head>
<body id="{{ page_title | handle }}" class="fs-grid template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}" >
  <div id="wrapper">
    {{ content_for_layout }}
  </div>
  {{ 'vendor.min.js'  | asset_url | script_tag }}
  {{ 'main.min.js'  | asset_url | script_tag }}
  {% include 'ajax-cart' %}
</body>
</html>
